---
import Navbar from '../storyblok/Navbar.astro';
import Footer from '../components/Footer.astro';
import './baseLayout.css';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>Virginia Vidonis Art</title>
  </head>

  <body>
    <div class='outer-container'>
      <Navbar />
      <div class='main-content'>
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>

<style>
  .outer-container {
    min-height: 100vh;
    position: relative;
    margin: 0 40px;
  }
  .main-content {
    max-width: 800px;
    margin: 0 auto;
    padding-bottom: 12rem;
  }

  @media only screen and (max-width: 600px) {
    .outer-container {
      margin: 0 10px;
    }
  }
</style>
