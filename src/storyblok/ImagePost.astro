---
import { renderRichText } from '@storyblok/astro';
import instagramLogo from '../assets/instagram-logo-white.svg';

const { post } = Astro.props;

const {
  title, image, description, instagramLink,
} = post;

const htmlDescription = renderRichText(description);

---

<div class='container'>
  <div class='img-container'>
    <img src={image.filename} />
    <div class='overlay-container'>
      <h1 class='post-title'>{title}</h1>
      {!!instagramLink && !!instagramLink.url && (
        <a href={instagramLink.url} target='_blank' rel='noreferrer'>
          <img src={instagramLogo} class='instagram-logo' />
        </a>
      )}
    </div>
  </div>
  <div class='description-container'>
    <Fragment set:html={htmlDescription} />
  </div>
</div>

<style>
  .container {
    margin: 30px;
    width: 220px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .img-container {
    position: relative;
    height: 300px;
    width: 100%;
  }
  .img-container > img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 8px;
  }
  .overlay-container {
    position: absolute;
    right: 0;
    left: 0;
    bottom: 0;
    height: 70px;
    border-radius: 0 0 8px 8px;
    padding: 8px 10px;
    background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7));
    color: white;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }
  .description-container {
    font-size: 12px;
    width: 100%;
    height: 60px;
    overflow: hidden;
    /* text-overflow: ellipsis; */
    /* white-space: nowrap; */
  }
  .post-title {
    font-weight: 800;
    font-size: 18px;
    margin: 0;
  }
  .instagram-logo {
    width: 24px;
    height: 24px;
  }
</style>
