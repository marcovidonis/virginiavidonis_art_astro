---
import { renderRichText, storyblokEditable } from '@storyblok/astro';
import instagramLogo from '../assets/instagram-logo-gradient.svg';
import PageTitle from './PageTitle.astro';

const { blok } = Astro.props;

const {
  image, description, instagramLink,
} = blok;

const htmlDescription = renderRichText(description);

//TODO display tags
---

<div {...storyblokEditable(blok)}>
  <PageTitle blok={blok} />

  <div class='img-container'>
    <img src={image.filename} />
  </div>

  {!!instagramLink && !!instagramLink.url && (
    <a href={instagramLink.url} class='instagram-link' target='_blank' rel='noreferrer'>
      See this content on Instagram
      <img src={instagramLogo} class='instagram-logo' />
    </a>
  )}

  <Fragment set:html={htmlDescription} />
</div>

<style>
  .img-container {
    min-height: 300px;
    max-height: 60vh;
    height: 60vh;
    max-width: 100%;
  }
  .img-container > img {
    max-height: 100%;
    max-width: 100%;
    object-fit: cover;
    border-radius: 8px;
  }
  .instagram-logo {
    width: 24px;
    height: 24px;
  }
  .instagram-link {
    text-decoration: none;
    color: inherit;
  }
  .instagram-link:hover {
    cursor: pointer;
    text-decoration: underline;
  }
</style>
