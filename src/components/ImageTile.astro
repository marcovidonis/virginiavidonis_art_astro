---
import { renderRichText } from '@storyblok/astro';
import { Image } from 'astro:assets';

const { blok, slug } = Astro.props;

const {
  title, image, description, alt,
} = blok;

const htmlDescription = renderRichText(description);
---

<div class='container'>
  <a href={slug} class='img-container'>
    <Image
      src={image.filename}
      alt={alt}
      width={250}
      height={600}
    />
    <div class='overlay-container'>
      <h1 class='post-title'>{title}</h1>
    </div>
  </a>
  <div class='description-container'>
    <Fragment set:html={htmlDescription} />
  </div>
</div>

<style>
  .container {
    margin: 30px;
    width: 250px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .img-container {
    position: relative;
    height: 400px;
    width: 100%;
  }
  .img-container > img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 8px;
  }
  .overlay-container {
    position: absolute;
    right: 0;
    left: 0;
    bottom: 0;
    height: 70px;
    border-radius: 0 0 8px 8px;
    padding: 8px 10px;
    background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7));
    color: white;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }
  .description-container {
    font-size: 14px;
    width: 100%;
    height: 60px;
    overflow: hidden;
  }
  .post-title {
    font-weight: 800;
    font-size: 18px;
    margin: 0;
  }
  .instagram-logo {
    width: 24px;
    height: 24px;
  }

  @media only screen and (max-width: 600px) {
    .container {
      margin: 0;
      margin-bottom: 10px;
      width: 100%;
    }
    .img-container {
      height: 600px;
    }
    .description-container {
      font-size: 12px;
    }
  }
</style>
